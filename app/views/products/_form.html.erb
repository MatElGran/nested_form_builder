<%= form_for(product, builder: CustomBuilder) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2>
        <%= pluralize(product.errors.count, "error" ) %> prohibited this product from being saved:
      </h2>

      <ul>
        <% product.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.fields_for(:serialized_column, product.serialized_column) do |fields_form| %>
      <% puts fields_form.class %>
      <%= fields_form.label :test, style: "display: block" %>
      <%= fields_form.text_area :test %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
